<aura:component
	implements="forceCommunity:availableForAllPageTypes"
	access="global">
	<aura:html tag="style">
		.mymodal .slds-modal__container { margin: 0 auto; width: 80% !important; max-width: 100% !important; min-width: 20rem; } .confirmation
		.slds-modal__container { margin: 0 auto; width: 40% !important; max-width: 100% !important; min-width: 20rem; } .maps .slds-modal__container { margin: 0
		auto; width: 80% !important; max-width: 100% !important; min-width: 20rem; } .maps button.slds-button_brand, .maps button.slds-button_brand:hover, .maps
		button.slds-button_brand:active, .confirmation button.slds-button_brand, .confirmation button.slds-button_brand:hover, .confirmation
		button.slds-button_brand:active { color:#FFFFFF !important; height:42px; width: 15%; } .maps button.slds-button[disabled] { background-color: #BDBEC0
		!important; border-color: #BDBEC0 !important; color:#FFFFFF !important; height:42px; width: 15%; } .viewCourse .slds-modal__container { margin: 0 auto;
		width: 90% !important; max-width: 100% !important; min-width: 20rem; } .eventRegistration .slds-modal__container { margin: 0 auto; width: 50%
		!important; max-width: 100% !important; min-width: 20rem; }

		<aura:if isTrue="{!$Browser.isPhone}">
			.slds-modal__container .modal-body { padding-left: 0px !important; padding-right: 0px !important; } .maps button.slds-button_brand, .maps
			button.slds-button_brand:hover, .maps button.slds-button_brand:active, .confirmation button.slds-button_brand, .confirmation
			button.slds-button_brand:hover, .confirmation button.slds-button_brand:active { color:#FFFFFF !important; height:42px; width: 30%; } .maps
			button.slds-button[disabled] { background-color: #BDBEC0 !important; border-color: #BDBEC0 !important; color:#FFFFFF !important; height:42px; width:
			30%; } .maps button.backToHome { width: 50% !important; }
		</aura:if>
	</aura:html>
	<lightning:overlayLibrary aura:id="overlayLib" />

	<aura:attribute
		name="header"
		type="string"
		access="global" />
	<aura:attribute
		name="headerColor"
		type="string"
		access="global" />
	<aura:attribute
		name="showTile1"
		type="boolean"
		access="global" />
	<aura:attribute
		name="tile1Name"
		type="string"
		access="global" />
	<aura:attribute
		name="showTile2"
		type="boolean"
		access="global" />
	<aura:attribute
		name="tile2Name"
		type="string"
		access="global" />
	<aura:attribute
		name="showTile3"
		type="boolean"
		access="global" />
	<aura:attribute
		name="tile3Name"
		type="string"
		access="global" />
	<aura:attribute
		name="showTile4"
		type="boolean"
		access="global" />
	<aura:attribute
		name="tile4Name"
		type="string"
		access="global" />

	<aura:attribute
		name="applicationListHeader"
		type="string"
		access="global" />
	<aura:attribute
		name="description"
		type="string"
		access="global" />

	<aura:attribute
		name="showRedirectButton"
		type="boolean"
		access="global" />
	<aura:attribute
		name="redirectButtonLabel"
		type="string"
		access="global" />
	<aura:attribute
		name="redirectButtonRedirectUrl"
		type="string"
		access="global" />

	<aura:attribute
		name="showContactUsButton"
		type="boolean"
		access="global" />
	<aura:attribute
		name="contactUsButtonLabel"
		type="string"
		access="global" />
	<aura:attribute
		name="contactUsHeader"
		type="string"
		access="global" />
	<aura:attribute
		name="contactUsDescription"
		type="string"
		access="global" />
	<aura:attribute
		name="contactUsPlaceholderText"
		type="string"
		access="global" />
	<aura:attribute
		name="contactUsSubmitButtonLabel"
		type="string"
		access="global" />
	<aura:attribute
		name="contactUsCancelButtonLabel"
		type="string"
		access="global" />
	<aura:attribute
		name="contactUsSuccessMessage"
		type="string"
		access="global" />
	<aura:attribute
		name="noJobApplicationMessage"
		type="string"
		access="global" />

	<aura:attribute
		name="hiresData"
		type="Object" />
	<aura:attribute
		name="hireFields"
		type="Object" />

	<aura:attribute
		name="config"
		type="Object" />

	<aura:handler
		name="init"
		value="{!this}"
		action="{!c.doInit}" />
	<div>
		<c:lexMyHiresTiles
			config="{!v.config}"
			aura:id="myHiresTiles"
			onhirestileclicked="{!c.handleApplicationsTileClicked}"></c:lexMyHiresTiles>
	</div>
	<div>
		<c:lexMyHiresAura
			config="{!v.config}"
			hiresData="{!v.hiresData}"
			hireFields="{!v.hireFields}"></c:lexMyHiresAura>
	</div>
</aura:component>