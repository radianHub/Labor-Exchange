<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightningCommunity__Default</target>
      <target>lightningCommunity__Page</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
				name="header"
				type="String"
				label="Header"
				default="Reset Your Password"
			/>
            <property
				name="headerColor"
				label="Header Color"
				type="Color"
				default="rgb(84, 105, 141)"
			/>
            <property
				name="description"
				type="String"
				label="Description"
				default="To reset your password, we'll need your email address. We'll send password reset instructions to the email address associated with your account."
			/>
            <property
				name="userNameLabel"
				type="String"
				label="User Name Label"
				default="Please enter your Email Address"
			/>
            <property
				name="resetbuttonLabel"
				type="String"
				label="Reset Password Button Label"
				default="Click to Reset Password"
			/>
            <property
				name="redirectURLCheckPassword"
				type="String"
				label="Redirect Url (Check Password)"
				default="/Employer/s/login/CheckPasswordResetEmail"
			/>
            <property
				name="errorMessage"
				type="String"
				label="No User Found Error Message"
				default="The Email Address you entered is invalid. Please try again."
			/>
            <property
				name="cancelbuttonLabel"
				type="String"
				label="Cancel Button Label"
				default="Cancel"
			/>
            <property
				name="redirectURL"
				type="String"
				label="Redirect Url (Cancel)"
				default="/Employer/s/login"
			/>
            <property
				name="footer"
				type="String"
				label="Footer"
				default="If you are having trouble logging in or need help, call us at (888)888-8888"
			/>
        </targetConfig>
       </targetConfigs>
</LightningComponentBundle>