<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Default</target>
        <target>lightningCommunity__Page</target>
      </targets>
      <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="header" type="String" label="Header" default="Please Check Your Email" />
            <property name="headerColor" label="Header Color" type="Color" default="rgb(84, 105, 141)" />
            <property name="description" type="String" label="Description" default="We’ve sent you an email with a link to finish resetting your password. Can’t find the email? Try checking your spam folder. If you still can’t log in, please call us at (888)888-8888 Monday-Friday between 8AM and 5PM." />
            <property name="returnbuttonLabel" type="String" label="Return To Login Button Label" default="Return to Login" />
            <property name="redirectURL" type="String" label="Redirect Url (Return to Login)" default="/Employer/s/login" />
            <property name="footer" type="String" label="Footer" default="If you are having trouble logging in or need help, call us at (888)888-8888." />
        </targetConfig>
       </targetConfigs>
</LightningComponentBundle>